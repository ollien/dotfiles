#!/usr/bin/env bash

volume=$(pactl list sinks | tr ' ' '\n' | grep -m1 '%' |tr -d '[]%')
muted=$(pactl list sinks |grep -m1 Mute |awk '{print $2}')
if [[ $volume == 100 ]]; then
	icon="audio-volume-high"
elif [[ $volume == 0 ]] || [[ $muted == "on" ]]; then
	icon="audio-volume-muted"
	volume=0
else
	icon="audio-volume-medium"
fi

$HOME/.local/bin/notify-send.sh " " -i $icon -h int:value:$volume -a "audio-notifier" -R /tmp/audio-notification-id
